@page
@model LogoutModel
@{
    ViewData["Title"] = "ログアウト";
}

<div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-sign-out-alt fa-4x text-primary mb-3"></i>
                        <h4>ログアウトしますか？</h4>
                    </div>
                    
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-sign-out-alt me-2"></i>ログアウト
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>ホームに戻る
                        </a>
                    </div>
</div>
