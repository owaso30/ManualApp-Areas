@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "パスワードリセット完了";
}

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
        <h4>パスワードリセットが完了しました</h4>
        <p class="text-muted">
            パスワードが正常にリセットされました。<br>
            新しいパスワードでログインしてください。
        </p>
    </div>
    
    <div class="mt-4">
        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg">
            <i class="fas fa-sign-in-alt me-2"></i>ログインページに移動
        </a>
    </div>
</div>
