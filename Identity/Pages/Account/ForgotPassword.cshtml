@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "パスワードを忘れた場合";
}

<div>
    <form method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mb-3" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>エラーが発生しました</strong>
                <div asp-validation-summary="All" class="text-danger mt-2"></div>
            </div>
        }
        
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">メールアドレス</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="example@email.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">リセット用メールを送信</button>
        </div>
    </form>
    
    <div class="text-center mt-3">
        <a asp-page="./Login" class="text-decoration-none">
            <i class="fas fa-arrow-left me-1"></i>ログインページに戻る
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
