@page
@model ExternalLoginDisplayNameModel
@{
    ViewData["Title"] = "表示名の設定";
}

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-user-plus fa-4x text-primary mb-3"></i>
        <h4>表示名を設定してください</h4>
        <p class="text-muted text-start">Googleアカウントでの初回ログインです。表示名を入力してください。</p>
    </div>
    
    <form id="displayNameForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
        
        <div class="mb-3">
            <label asp-for="Input.DisplayName" class="form-label">表示名</label>
            <input asp-for="Input.DisplayName" class="form-control" autocomplete="name" aria-required="true" placeholder="山田太郎" />
            <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
        </div>
        
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-check me-2"></i>登録を完了
            </button>
        </div>
    </form>
</div>
